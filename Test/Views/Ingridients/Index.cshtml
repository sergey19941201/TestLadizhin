@model IEnumerable<Test.Models.Ingridients>

@{
    //ViewBag.Title = "Ингридиенты";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ингридиенты</h2>

<p>
    @Html.ActionLink("Добавить ингридиент", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Ингридиент
        </th>
        <th>
            Количество
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngridientName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Ingridient_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Ingridient_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Ingridient_Id })
            </td>
        </tr>
    }

</table>
