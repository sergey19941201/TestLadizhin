@model IEnumerable<Test.Models.Ingridients>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngridientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngridientName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Ingridient_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Ingridient_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Ingridient_Id })
            </td>
        </tr>
    }

</table>
